# Environment variables for AI Code Review System
# Copy this file to .env and customize the values

# ======================
# Database Configuration
# ======================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=reviewdb
DB_USERNAME=review_user
DB_PASSWORD=change_this_password_in_production

# ======================
# AI Service Configuration
# ======================
AI_SERVICE_URL=http://localhost:8080
AI_API_KEY=your_ai_api_key_here
AI_TIMEOUT=30000
AI_RETRIES=3

# ======================
# GitHub Integration
# ======================
GITHUB_TOKEN=ghp_your_github_personal_access_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# ======================
# Application Configuration
# ======================
SPRING_PROFILES_ACTIVE=dev
LOG_LEVEL=INFO
WEB_LOG_LEVEL=WARN
DDL_AUTO=validate
SHOW_SQL=false

# ======================
# Security Configuration
# ======================
JWT_SECRET=your_jwt_secret_key_here_minimum_256_bits
ENCRYPTION_KEY=your_encryption_key_here

# ======================
# Redis Configuration
# ======================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ======================
# Email Configuration (Optional)
# ======================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@yourcompany.com

# ======================
# Monitoring Configuration
# ======================
PROMETHEUS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=change_this_password

# ======================
# Logging Configuration
# ======================
LOG_FILE=logs/code-review.log
LOG_PATTERN_CONSOLE=%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n

# ======================
# Docker Configuration
# ======================
COMPOSE_PROJECT_NAME=review-code-ai
DOCKER_REGISTRY=your-registry.com
IMAGE_TAG=latest

# ======================
# Backup Configuration
# ======================
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=7
S3_BACKUP_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# ======================
# Development Only
# ======================
DEBUG_PORT=5005
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin

# ======================
# Production Only
# ======================
DOMAIN_NAME=review.yourcompany.com
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem
MAX_HEAP_SIZE=1g
MIN_HEAP_SIZE=512m