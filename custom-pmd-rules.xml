<?xml version="1.0"?>
<ruleset name="Custom Architecture Rules"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 
         https://pmd.sourceforge.io/ruleset_2_0_0.xsd">

    <description>Custom PMD rules for architecture and design principles</description>

    <!-- Import standard rulesets -->
    <rule ref="category/java/bestpractices.xml"/>
    <rule ref="category/java/codestyle.xml"/>
    <rule ref="category/java/design.xml"/>
    <rule ref="category/java/errorprone.xml"/>
    <rule ref="category/java/performance.xml"/>
    <rule ref="category/java/security.xml"/>

    <!-- Custom Rules for Clean Code -->
    <rule ref="category/java/design.xml/LongMethod">
        <properties>
            <property name="minimum" value="20"/>
        </properties>
    </rule>

    <rule ref="category/java/design.xml/ExcessiveParameterList">
        <properties>
            <property name="maxParams" value="5"/>
        </properties>
    </rule>

    <rule ref="category/java/design.xml/DeeplyNestedIfStmts">
        <properties>
            <property name="maxDepth" value="3"/>
        </properties>
    </rule>

    <!-- DDD Rules -->
    <rule ref="category/java/errorprone.xml/MissingOverride"/>

    <!-- Service Layer Rules -->
    <rule ref="category/java/bestpractices.xml/LooseCoupling"/>

    <!-- Repository Rules -->
    <rule ref="category/java/errorprone.xml/UseCollectionIsEmpty"/>

    <!-- API Design Rules -->
    <rule ref="category/java/codestyle.xml/UnnecessaryParentheses"/>

    <!-- Security Rules -->
    <rule ref="category/java/security.xml/AvoidHardcodedCredentials"/>

    <!-- Performance Rules -->
    <rule ref="category/java/performance.xml/AvoidInstantiatingObjectsInLoops"/>

    <!-- Controller-Specific Rules -->
    <rule ref="category/java/errorprone.xml/UnusedPrivateField"/>

    <!-- DTO/Entity Separation Rules -->
    <rule ref="category/java/errorprone.xml/UnusedLocalVariable"/>

    <!-- Transaction Management Rules -->
    <rule ref="category/java/bestpractices.xml/ProperCloneImplementation"/>

    <!-- API Versioning Rules -->
    <rule ref="category/java/codestyle.xml/UnnecessaryFullyQualifiedName"/>

    <!-- Validation Rules -->
    <rule ref="category/java/errorprone.xml/NullAssignment"/>

    <!-- Security Rules Enhancement -->
    <rule ref="category/java/security.xml/InsecureCryptoUsage"/>

    <!-- Exception Handling Rules -->
    <rule ref="category/java/errorprone.xml/AvoidCatchingGenericException"/>

    <!-- Configuration Rules -->
    <rule ref="category/java/bestpractices.xml/UseUtilityClass"/>

    <!-- Testing Rules -->
    <rule ref="category/java/codestyle.xml/TestClassWithoutTestCases"/>
</ruleset>